cells.append(nbf.v4.new_markdown_cell("## Step 1: Load and parse the data\nCreate the DataFrame and convert `visit_date` to datetime."))
cells.append(nbf.v4.new_code_cell("""import pandas as pd

data = {
    'visit_id': [1, 2, 3],
    'patient_id': [101, 101, 102],
    'visit_date': ['2024-10-02', '2025-01-15', '2025-01-20'],
